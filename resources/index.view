<svg>
  <rect id="background" />

  <g id = "containerDateTime">
    <svg x="0%" y = "20%" height="135">
      <text id="txtTime" class="clock-text"/>
      <gradientRect id="gradientDividerTop" class="divider divider-top linear-gradient" />
      <gradientRect id="gradientDividerBottom" class="divider divider-btm linear-gradient" />
      <text id="txtDate" class="date-text"/>
    </svg>
  </g>
  <defs>
    <symbol id="circle">
      <circle id="circleFill" cx="68" cy="45" r="43" fill="fb-aqua" />
