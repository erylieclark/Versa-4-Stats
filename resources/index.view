      <arc id="arcBack" class="arc-style arc-style-back"  />
      <arc id="arcFront" class="arc-style arc-style-front" />
      <!--image x="113" y="10" width="181" height="186" href="icons/steps_transparent.png" /-->
      <text id="dataCount" class="activityText" y="160" />
    </symbol>
  </defs>

