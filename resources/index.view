    </use>
    <use href="#circle">
      <set href="circleFill"  attributeName="cx"  to="268" />
      <set href="dataIcon"    attributeName="x"   to="223"  />
      <set href="arcBack"     attributeName="x"   to="225"  />
      <set href="arcFront"    attributeName="x"   to="223"  />
      <set href="dataCount"   attributeName="x"   to="223" />
    </use>
    <g id="circle1" display="none">
      <circle id="circleFill" cx="68" cy="45" r="43" fill="fb-aqua" />
      <image id="dataIcon" href="icons/steps_transparent.png" class="image-style" x="23" />
      <arc id="arcBack" x="25" class="arc-style arc-style-back"  />
